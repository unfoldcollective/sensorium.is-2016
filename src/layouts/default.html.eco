<!doctype html>
<html itemscope itemtype="http://schema.org/Event">
<head>

  <title itemprop="name"><%= @conf.name %></title>

  <%- @getBlock("meta").toHTML() %>
  <meta charset="utf-8">
  <meta name="author" content="<%= @conf.name %>">
  <meta name="description" content="<%= @conf.description %>">
  <meta name="viewport" content="width=device-width">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  
  <%-@partial('credits-comment.html')%>
  <%-@partial('head-facebook.html')%>
  <%-@partial('head-favicons.html.eco')%>

  <!-- STYLES -->
  <% if @document.lang != 'en': %>
    <%- @getBlock('styles').add(@getStylesFromFirstLevel()).toHTML() %>
  <% else: %>
    <%- @getBlock('styles').add(@site.styles).toHTML() %>  
  <% end %>
  
  <!-- / STYLES -->

</head>
<body>

  <div class="global">
    <%-@partial('nav.html.eco', {showSections:true})%>
    <%-@partial('header.html.eco', {image:@document.image, showLogotype:true, title:@document.title, subtitle:@document.subtitle, subsubtitle:@document.datum, showCallToAction:true})%>

    <!-- CONTENT -->
    <div id="content">
      <%- @content %>
    </div>
    <!-- / CONTENT -->
    
    <%-@partial('footer.html.eco')%>
  </div>

  <% if @document.lang != 'en': %>
    <%- @getBlock('scripts').add(@getScriptsFromFirstLevel()).toHTML() %>
  <% else: %>
    <%- @getBlock('scripts').add(@site.scripts).toHTML() %>  
  <% end %>

  <% if @conf.address != '': %>
  <!-- <script src="http://maps.google.com/maps/api/js?sensor=false"></script> -->
  <!-- <script src="<%= @getTheme() %>/js/main.js"></script> -->
  <% end %>

  <!-- Google Analytics -->
  <%-@partial('googleanalytics.html.eco')%>

</body>
</html>
